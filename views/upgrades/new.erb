<h3>Add a New Upgrade</h3>

<form method="POST" action="/ships">

<div>
  <label for="name">Upgrade Name:</label>
  <input type="text" name="name" id="name"/>
</div>

<div>
  <label for="type">Upgrade Type:</label>
  <input type="text" name="type" id="type"/>
</div>

<div>
  <label for="cost">Cost:</label>
  <input type="number" name="cost" id="cost"/>
</div>

<div>
  <label for="effect">Effect:</label>
  <input type="text" name="effect" id="effect"/>
</div>

<input class="button green" type="submit" name="Add Upgrade"/>

</form>