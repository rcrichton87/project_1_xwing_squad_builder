<h1>All Upgrades:</h1>

<% upgrade_types = Upgrade.all_types %>

<% upgrade_types.each do |upgrade_type| %>

  <h4> <%= upgrade_type.capitalize %> </h3>

  <% @upgrades.each do |upgrade| %>
    <% if upgrade.type == upgrade_type %>
      <p><%= upgrade.name %> - <%= upgrade.cost %> points </p>
      <p> <%= upgrade.effect %> </p>
    <% end %>
  <% end %>
 <hr/>
<% end %>